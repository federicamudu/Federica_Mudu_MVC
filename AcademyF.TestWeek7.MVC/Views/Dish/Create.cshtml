@model DishViewModel
<h1>Inserisci nuovo piatto</h1>
<br />
<form method="post">
    <div class="form-group">
        <label asp-for="Name">Nome del piatto</label>
        <input asp-for="Name" class="form-control"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrizione</label>
        <input asp-for="Description" class="form-control"  />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Tipologia</label>
        <input asp-for="Type" class="form-control"  />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Prezzo</label>
        <input asp-for="Price" class="form-control"  />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MenuId">Menu associato</label>
        <input asp-for="MenuId" class="form-control"  />
        <span asp-validation-for="MenuId" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Inserisci" class="btn btn-primary" />
    <input type="reset" value="Reset" class="btn btn-primary" />
    <a class="btn btn-primary" asp-controller="Dish" asp-action="Index">Indietro</a>
</form>
