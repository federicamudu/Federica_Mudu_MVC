@model ICollection<MenuViewModel>
<h1>Ecco la lista dei Menu</h1>
<br />
@if (User.IsInRole("Administrator"))
{
    <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci nuovo Menu!</a>
}

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                @*<td>@item.Descrizione</td>*@
                <td>
                    <a class="btn btn-primary" asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id">Visualizza dettagli</a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-primary" asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id">Aggiorna Menu</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

